{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r --parallel run test",
    "clean": "pnpm -r --parallel run clean",
    "prepare": "pnpm --filter @nouns/assets --filter @nouns/contracts --filter @nouns/sdk run prepare",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "format": "NODE_OPTIONS=--max_old_space_size=16384 prettier --write 'packages/**/*.{ts(x)?,sol,md,css,json}' '!**/typechain/**'"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "chai": "^4.5.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^5.0.9",
    "mocha": "^8.4.0",
    "pinst": "^2.1.6",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "pnpm": {
    "overrides": {
      "ethers": "5.6.8",
      "@usedapp/core>ethers": "5.6.8",
      "@ethersproject/contracts": "5.6.2",
      "elliptic": ">=6.6.1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "pnpm lint",
      "pnpm format"
    ]
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "22.x"
  }
}
